<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dalexFDA.CustomButton"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms">
    <ContentView.Content>
        <Frame Padding="0" HasShadow="true">
            <StackLayout Orientation="Horizontal" Spacing="8" BackgroundColor="{StaticResource White}">
                <svg:SvgImage Svg="res:images.icon-add" ColorMapping="000000=6D9B36" WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label x:Name="data" FontSize="16" FontFamily="{StaticResource Roboto-Bold}" TextColor="#6D9B36" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>