<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="dalexFDA.Core.InvestmentView"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms"
             xmlns:circle="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
    <ContentView.Content>
        <StackLayout Spacing="6" Padding="16" BackgroundColor="#FFF">
            <Label x:Name="id" FontSize="16" FontFamily="{StaticResource Roboto-Medium}" Text="" TextColor="{StaticResource PalmLeaf}" Margin="0,0,0,8" />
            
            <StackLayout Orientation="Horizontal">
                <Label FontSize="14" FontFamily="{StaticResource Roboto-Medium}" Text="Principal" TextColor="{StaticResource Manatee}" HorizontalOptions="Start" />
                <Label FontSize="14" FontFamily="{StaticResource Roboto-Medium}" Text="Rate" HorizontalOptions="EndAndExpand" TextColor="{StaticResource Manatee}" VerticalOptions="Start" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="principal" FontSize="16" FontFamily="{StaticResource Roboto-Medium}" TextColor="{StaticResource Liver}" 
                       HorizontalTextAlignment="Center" VerticalOptions="Start" Margin="0,-4,0,0"
                    />
                <Label x:Name="rate" FontSize="16" FontFamily="{StaticResource Roboto-Medium}" HorizontalOptions="EndAndExpand" TextColor="{StaticResource Liver}"  VerticalOptions="Start" />
            </StackLayout>
            
            <BoxView HeightRequest="1.5" BackgroundColor="{StaticResource OffWhite4}" Margin="0,8" />
            
            <StackLayout Orientation="Horizontal">
                <Label FontSize="14" FontFamily="{StaticResource Roboto-Regular}" Text="Maturity Value" TextColor="{StaticResource Manatee}" />
                <Label FontSize="14" FontFamily="{StaticResource Roboto-Regular}" Text="Start Date" HorizontalOptions="EndAndExpand" TextColor="{StaticResource Manatee}" VerticalOptions="Start"
                    />
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
                <Label x:Name="maturity" FontSize="16" FontFamily="{StaticResource Roboto-Medium}" TextColor="{StaticResource Liver}" HorizontalTextAlignment="Start" VerticalOptions="Start" />
                <Label x:Name="startDate" FontSize="16" FontFamily="{StaticResource Roboto-Medium}" HorizontalOptions="EndAndExpand" TextColor="{StaticResource Liver}"  VerticalOptions="Start" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
