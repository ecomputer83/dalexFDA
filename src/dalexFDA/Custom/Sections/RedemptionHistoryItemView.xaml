<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dalexFDA.RedemptionHistoryItemView">
    <ContentView.Content>
        <Grid Padding="32,16" BackgroundColor="{StaticResource OffWhite4}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
                <Label x:Name="number" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Liver}" Margin="0,0,0,8" />                    
                <Label x:Name="type" FontSize="16" TextColor="{StaticResource Liver}" />

                <StackLayout Orientation="Horizontal">
                    <Label x:Name="retire" FontSize="14" TextColor="{StaticResource Manatee}" />
                    <Label x:Name="amount" FontSize="14" TextColor="{StaticResource Manatee}" />
                </StackLayout>
            </StackLayout>
            <Label x:Name="duration" Grid.Column="1" TextColor="{StaticResource Manatee}" FontSize="16" VerticalOptions="Center" VerticalTextAlignment="Center" />
        </Grid>
    </ContentView.Content>
</ContentView>