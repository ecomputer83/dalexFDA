<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="dalexFDA.DepositHistoryItemView"
             xmlns:effects="clr-namespace:dalexFDA;assembly=dalexFDA"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms">
    <ContentView.Content>
        <StackLayout Padding="32,16" Spacing="8" BackgroundColor="{StaticResource OffWhite4}">
            <Label x:Name="number" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Liver}" Margin="0,0,0,8" />
            
            <Label x:Name="paymentType" FontSize="16" TextColor="{StaticResource Liver}" />
            
            <StackLayout Orientation="Horizontal">
                <Label x:Name="documentType" FontSize="14" TextColor="{StaticResource Manatee}" />
                <Label x:Name="amount" FontSize="14" TextColor="{StaticResource Manatee}" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
