<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="dalexFDA.DepositHistoryItemView"
             xmlns:effects="clr-namespace:dalexFDA;assembly=dalexFDA"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms"
             effects:GradientEffect.GradientColor="#6D9B36">
    <ContentView.Content>
        <Frame Padding="32,16" BackgroundColor="#A8C08D" CornerRadius="12" HasShadow="false">
            <StackLayout Spacing="8">
                <Label x:Name="number" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource White}" Margin="0,0,0,8" />
                
                <Label x:Name="paymentType" FontSize="16" TextColor="{StaticResource OffWhite2}" />
                
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="documentType" FontSize="14" TextColor="{StaticResource White}" />
                    <Label x:Name="amount" FontSize="14" TextColor="{StaticResource OffWhite2}" />
                </StackLayout>
                <StackLayout.Effects>
                    <effects:GradientEffect />
                </StackLayout.Effects>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
