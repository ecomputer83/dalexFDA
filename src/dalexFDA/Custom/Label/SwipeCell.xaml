<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dalexFDA.SwipeCell"
             xmlns:local="clr-namespace:dalexFDA"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms">
    <ContentView.Content>
        <StackLayout Spacing="0">
            <svg:SvgImage x:Name="icon" Svg="res:images.icon-up-arrow" ColorMapping="000000=4E4F50" HorizontalOptions="Center" WidthRequest="16" />
            <Label x:Name="caption" Text="Swipe up for tips" TextColor="{StaticResource Liver}" FontSize="14" HorizontalOptions="Center" HorizontalTextAlignment="Center">
                <Label.Effects>
                    <local:UnderlineEffect />
                </Label.Effects>
            </Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>
