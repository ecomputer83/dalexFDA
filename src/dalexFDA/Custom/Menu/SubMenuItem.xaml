<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Zenith.SubMenuItem"
             xmlns:local="clr-namespace:Zenith"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms"
             BackgroundColor="Transparent">
    <ContentView.Content>
        <StackLayout Spacing="8">
            <StackLayout Padding="64,0,32,0" Orientation="Horizontal" Spacing="22" HeightRequest="40">
                <svg:SvgImage x:Name="icon" Svg="" WidthRequest="22" HeightRequest="22" VerticalOptions="Center" ColorMapping="000000=FFFFFF"  />
                <Label x:Name="button" Text="" TextColor="#FFF" VerticalOptions="Center" BackgroundColor="Transparent"  />
            </StackLayout>
            <BoxView HeightRequest="1" BackgroundColor="{StaticResource PastelGray}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
