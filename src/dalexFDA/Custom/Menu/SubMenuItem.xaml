<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="dalexFDA.Core.SubMenuItem"
             xmlns:svg="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms"
             BackgroundColor="Transparent">
    <ContentView.Content>
        <StackLayout Spacing="8">
            <StackLayout Padding="64,0,32,0" Orientation="Horizontal" Spacing="22" HeightRequest="40">
                <svg:SvgImage x:Name="icon" Svg="" WidthRequest="22" HeightRequest="20" VerticalOptions="Center" ColorMapping="000000=FFFFFF"  />
                <Label x:Name="button" Text="" TextColor="#FFF" FontFamily="{StaticResource Roboto-Regular}" VerticalOptions="Center" BackgroundColor="Transparent"  >
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double" Android="14" iOS="16" />
                    </Label.FontSize>
                </Label>
            </StackLayout>
            <BoxView HeightRequest="1" BackgroundColor="{StaticResource PastelGray}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
